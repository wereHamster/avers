{
    "compilerOptions": {
        "target": "es2018",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "types": []
    },
    "include": [
        "src/**/*.ts"
    ]
}
