{
  "files": {
    "ignore": [".direnv", "dist", "docs", "node_modules"]
  },

  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },

  "linter": {
    "rules": {
      "style": {
        "noArguments": "off",
        "useEnumInitializers": "off",
        "useShorthandFunctionType": "off",
        "noParameterAssign": "off",
        "useSingleVarDeclarator": "off",
        "useImportType": "off",
        "noUselessElse": "off"
      },
      "correctness": {
        "noSwitchDeclarations": "off"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noShadowRestrictedNames": "off",
        "noExplicitAny": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off",
        "useArrowFunction": "off"
      }
    }
  }
}
